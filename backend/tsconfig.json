{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "#shared/*": ["../shared/*"]
    }
  },
  "include": ["src/**/*", "prisma/seed.mjs", "../shared/**/*.ts"]
}
